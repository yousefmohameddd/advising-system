@using System.Data
@using System.Data.SqlClient

@model DataTable

<h2>List of Students with their Advisors</h2>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Advisor ID</th>
            <th>Advisor Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@((int)row["student_id"])</td>
                <td>@(row["f_name"].ToString())</td>
                <td>@((int)row["advisor_id"])</td>
                <td>@(row["advisor_name"].ToString())</td>

            </tr>
        }

    </tbody>
</table>

@Html.ActionLink("Back to Admin Dashboard", "AdminDashboard", "Admin", null, new { @class = "btn btn-secondary" })