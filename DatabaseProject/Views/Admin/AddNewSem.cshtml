@model DatabaseProject.Models.SemesterO

@{
    ViewBag.Title = "AddNewSemester";
}

<h2>Add Semester</h2>

@if (TempData["SuccessMessage"] != null)
{
    <p class="text-success">@TempData["SuccessMessage"]</p>
}

@using (Html.BeginForm("AddNewSem", "Admin", FormMethod.Post))
{
    <div>
        @Html.LabelFor(model => model.Start_Date)
        @Html.TextBoxFor(model => model.Start_Date)
        @Html.ValidationMessageFor(model => model.Start_Date)
    </div>

    <div>
        @Html.LabelFor(model => model.End_Date)
        @Html.TextBoxFor(model => model.End_Date)
        @Html.ValidationMessageFor(model => model.End_Date)
    </div>

    <div>
        @Html.LabelFor(model => model.SemesterCode)
        @Html.TextBoxFor(model => model.SemesterCode)
        @Html.ValidationMessageFor(model => model.SemesterCode)
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>

    if (!ViewData.ModelState.IsValid || ViewBag.ErrorMessage != null)
    {
        <p class="text-danger">Please fix the validation errors.</p>
    }

    if (TempData["SuccessMessage"] != null)
    {
        <p class="text-success">@TempData["SuccessMessage"]</p>
    }

}
@Html.ActionLink("Back to Admin Dashboard", "AdminDashboard", "Admin", null, new { @class = "btn btn-secondary" })
