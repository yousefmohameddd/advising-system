@using System.Data
@using System.Data.SqlClient

@model DataTable
     
<h2>Pending Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>RequestID </th>
            <th>Type</th>
            <th>Comment</th>
            <th>status</th>
            <th>Credit Hours</th>
            <th>Course ID</th>
            <th>Student ID</th>
            <th>Advisor ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@((int)row["request_id"])</td>
                <td>@(row["type"].ToString())</td>
                <td>@(row["comment"].ToString())</td>
                <td>@(row["status"].ToString())</td>
                <td>@(row["credit_hours"])</td>
                <td>@(row["course_id"])</td>
                <td>@(row["student_id"])</td>
                <td>@(row["advisor_id"])</td>
               

            </tr>
        }

    </tbody>
</table>
@Html.ActionLink("Back to Admin Dashboard", "AdminDashboard", "Admin", null, new { @class = "btn btn-secondary" })