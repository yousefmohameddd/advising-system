@model IEnumerable<DatabaseProject.Models.Request>

@{
    ViewBag.Title = "ViewRequests";
}

<h2>All Pending Requests</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.request_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.credit_hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.course_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.student.student_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.advisor.advisor_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.request_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.credit_hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.student_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.advisor.advisor_id)
            </td>

        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Main Page", "./Index")
</div>
